generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          String   @id @default(uuid())
  description String
  price       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  category    String
  discount    Int?
  images      String[]
  oldPrice    Int?
  slug        String   @unique
  specs       String[]
  title       String
  cartItems   CartItem[]
}

model Cart {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     CartItem[]
  sessionId String?    @unique // For anonymous users until you add authentication
}

model CartItem {
  id        String   @id @default(uuid())
  quantity  Int      @default(1)
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  cart      Cart     @relation(fields: [cartId], references: [id])
  cartId    String
}
